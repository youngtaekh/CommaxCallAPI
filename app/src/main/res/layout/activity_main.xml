<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical"
              android:padding="10dp"
              tools:mContext=".ExampleActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="email : "/>

        <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="device ID : "/>

        <EditText
                android:id="@+id/etDeviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Register" />

            <TextView
                    android:id="@+id/tvUnregister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Unregister" />

            <TextView
                    android:id="@+id/tvMessageGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Send Group" />

            <TextView
                    android:id="@+id/tvMessageUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Send User" />

            <TextView
                    android:id="@+id/tvMessageDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Send Device" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvDeviceRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:text="D Register" />

            <TextView
                    android:id="@+id/tvDeviceUnregister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="D UnRegister" />

            <TextView
                    android:id="@+id/tvSendCctv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Send Cctv" />

            <TextView
                    android:id="@+id/tvSendControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#cccccc"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:text="Send Option" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="target : "/>

        <EditText
                android:id="@+id/etTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tvCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:text="Call" />

    </LinearLayout>

    <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:textColor="#000000"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Send" />

    <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="10dp"
            android:textSize="20dp"/>


</LinearLayout>