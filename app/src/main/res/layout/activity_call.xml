<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:mContext=".CallActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MergeRootFrame">

        <io.dotconnect.android.view.ConnectView
                android:id="@+id/cvFullView"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

        <io.dotconnect.android.view.ConnectView
                android:id="@+id/cvSmallView"
                android:layout_height="144dp"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"/>

    </FrameLayout>

    <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="incoming"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus"
            android:background="#000000"
            android:textColor="#ffffff"
            android:text="END"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvEnd"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus"
            android:background="#000000"
            android:textColor="#ffffff"
            android:text="ACCEPT"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvAccept"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus"
            android:background="#000000"
            android:textColor="#ffffff"
            android:text="SET"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvSpeaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvSet"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus"
            android:background="#000000"
            android:textColor="#ffffff"
            android:text="SPEAKER"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEnd"
            android:background="#000000"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:text="CANCEL"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvHangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvCancel"
            app:layout_constraintTop_toBottomOf="@+id/tvEnd"
            android:background="#000000"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:text="HANG UP"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvHangup"
            app:layout_constraintTop_toBottomOf="@+id/tvEnd"
            android:background="#000000"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:text="REJECT"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvAcceptAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCancel"
            android:background="#000000"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:text="ACCEPT AUDIO"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    <TextView
            android:id="@+id/tvAcceptVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tvAcceptAudio"
            app:layout_constraintTop_toBottomOf="@+id/tvCancel"
            android:background="#000000"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:text="ACCEPT VIDEO"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:padding="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>